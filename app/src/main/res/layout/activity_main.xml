<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/slwback2"
    >

    <com.beardedhen.androidbootstrap.BootstrapLabel
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="62dp"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="61dp"
        android:text="SMART WINDOWS"
        app:bootstrapBrand="danger"
        app:bootstrapHeading="h3"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapEditText
        android:id="@+id/ip"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="235dp"
        android:hint="IP ADDRESS"
        android:textAlignment="center"
        android:textStyle="bold"
        app:bootstrapBrand="info"
        app:bootstrapSize="lg"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/close"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/opaque"
        android:layout_alignTop="@+id/open"
        android:layout_marginStart="0dp"
        android:text="CLOSE"
        android:textSize="10sp"
        app:bootstrapBrand="primary"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/open"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/transparent"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="71dp"
        android:text="OPEN"
        android:textSize="10sp"
        app:bootstrapBrand="primary"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/transparent"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/aon"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="389dp"
        android:text="TRANSPARENT"
        android:textSize="8sp"
        app:bootstrapBrand="primary"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/opaque"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/transparent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_marginStart="192dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="-2dp"
        android:text="OPAQUE"
        android:textSize="8sp"
        app:bootstrapBrand="primary"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/aon"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="216dp"
        android:text="AUTO ON"
        android:textSize="10sp"
        app:bootstrapBrand="success"
        app:roundedCorners="true" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/aoff"
        android:layout_width="140dp"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/close"
        android:layout_alignTop="@+id/aon"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:text="AUTO OFF"
        android:textSize="10sp"
        app:bootstrapBrand="danger"
        app:roundedCorners="true" />

</RelativeLayout>